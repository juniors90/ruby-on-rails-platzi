%h1 Listing users

%table
  %thead
    %tr
      %th First name
      %th Last name
      %th Description
      %th Addres
      %th About me
      %th Age
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.first_name
        %td= user.last_name
        %td= user.description
        %td= user.addres
        %td= user.about_me
        %td= user.age
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }

